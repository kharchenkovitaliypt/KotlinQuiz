import com.soywiz.klock.TimeSpan;
import java.lang.Boolean;

CREATE TABLE DbReminder(
    id TEXT NOT NULL PRIMARY KEY,
    photo TEXT,
    isDone INTEGER AS Boolean DEFAULT 0 NOT NULL,
    title TEXT NOT NULL,
    notifyTime INTEGER AS TimeSpan NOT NULL
);

insert:
INSERT OR REPLACE INTO DbReminder (id, photo, isDone, title, notifyTime)
VALUES (?, ?, ?, ?, ?);

selectAll:
SELECT * FROM DbReminder;

clearAll:
DELETE FROM DbReminder;